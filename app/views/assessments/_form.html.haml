= form_for @assessment do |f|
  - if @assessment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@assessment.errors.count, "error")} prohibited this assessment from being saved:"
      %ul
        - @assessment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :assessment_type
    = f.text_field :assessment_type
  .field
    = f.label :amount
    = f.number_field :amount
  .field
    = f.label :collection_id
    = f.number_field :collection_id
  .actions
    = f.submit 'Save'
